{
  "api": {
    "base_url": "http://localhost:8080/api",
    "timeout": 10000
  },
  "auth": {
    "token_expiry_minutes": 60,
    "refresh_token_expiry_days": 7
  },
  "features": {
    "enable_dark_mode": true,
    "enable_notifications": true
  },
  "defaults": {
    "language": "en",
    "items_per_page": 20
  },
  "logging": {
    "log_level": "info",
    "enable_console_logging": true,
    "enable_file_logging": false
  }
} 